{
    "compilerOptions": {
        "module": "ESNext",
        "jsx": "preserve",
        "target": "ESNext",
        "moduleResolution": "Node",
        "allowJs": false,
        "noEmit": true,
        "allowSyntheticDefaultImports": true,
        "skipLibCheck": true,
        "lib": [
            "DOM",
            "DOM.Iterable",
            "ESNext"
        ],
        "typeRoots": [
            "node_modules/@types",
        ],
        "strict": true,
        "noImplicitAny": true,
        "alwaysStrict": true,
        "noImplicitThis": true,
        "strictBindCallApply": true,
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "strictPropertyInitialization": true
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.tsx",
    ],
    "exclude": [
        "node_modules"
    ]
}
